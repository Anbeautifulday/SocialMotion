<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.edu.cqupt.campussocialmotion.Activity.LoginActivity"
    android:background="@drawable/login_back5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#50000000"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/login_icon"/>

        <EditText
            android:id="@+id/login_id"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:inputType="numberSigned"
            android:drawableLeft="@drawable/login1"
            android:drawablePadding="8dp"
            android:hint="@string/input_id"
            android:textSize="20sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:inputType="numberPassword"
            android:hint="@string/input_pwd"
            android:drawableLeft="@drawable/login2"
            android:drawablePadding="8dp"
            android:textSize="20sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/login_normal"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:text="@string/app_login" />

    </LinearLayout>



</LinearLayout>
